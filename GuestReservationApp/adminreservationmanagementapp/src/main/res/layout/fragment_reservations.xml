<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line"
    tools:context=".mainpage.ReservationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/reservations"
            android:textAppearance="@style/screen_title_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            style="@style/TopRightButtonCorners"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/orange"
            android:paddingHorizontal="12dp"
            android:text="@string/history"
            android:textAppearance="@style/section_text"
            app:icon="@drawable/history_icon"
            app:iconSize="36dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBtnPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pending"
            android:textAlignment="center"
            android:textAppearance="@style/small_text"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBtnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textAlignment="center"
            android:textAppearance="@style/small_text"
            android:textColor="@color/grey"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/grey"
        app:tabSelectedTextColor="#FF6C44"
        app:tabIndicatorColor="#FF6C44" />

<!--   Swipe between lists -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>