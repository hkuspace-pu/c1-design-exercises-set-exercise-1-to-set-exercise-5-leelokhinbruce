<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservation.ReservationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="32dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reservation"
                android:textAlignment="center"
                android:textAppearance="@style/screen_subtitle_text" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgBtnClose"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/close_icon" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="@string/date"
            android:textAppearance="@style/section_text" />

<!--       Date List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupDate"
                    app:singleSelection="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

<!--                    Sample of chips -->
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 6"
                        android:textAppearance="@style/regular_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 7"
                        android:textAppearance="@style/regular_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 8"
                        android:textAppearance="@style/regular_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 9"
                        android:textAppearance="@style/regular_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 10"
                        android:textAppearance="@style/regular_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="@string/Time"
            android:textAppearance="@style/section_text" />

        <!--       Time List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTime"
                    app:singleSelection="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

<!--                    Sample of chips -->
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:00"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:30"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:00"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:30"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:00"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:30"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="@string/guest"
            android:textAppearance="@style/section_text" />

        <!--       Guest List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupGuest"
                    app:singleSelection="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--                    Sample of chips -->
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textAppearance="@style/small_text"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="Occasion (optional)"
            android:textAppearance="@style/section_text" />

        <!--       Occasion List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupOccasion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--                    Sample of chips -->
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friends Gathering"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Gathering"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                    <com.google.android.material.chip.Chip
                        style="@style/ChipCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dating"
                        android:textAppearance="@style/small_text"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp"
                        app:chipStrokeColor="@color/hint_and_stroke" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_btn"
        android:padding="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_bg"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/btn_text" />
</RelativeLayout>